<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/cardview_dark_background"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Smart home"
        android:textColor="@color/white"
        android:textSize="60dp"
        android:layout_marginBottom="20dp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bluetooth options:"
        android:textColor="@color/white"
        android:textSize="35dp"
        android:layout_marginBottom="20dp"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnBluetoothOn"
            style="android:style/Widget.Button"
            android:background="@drawable/button_background"
            android:fontFamily="sans-serif"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="150dp"
            android:minHeight="60dp"
            android:textSize="18dp"
            android:text="Bluetooth On" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnBluetoothOff"
            style="android:style/Widget.Button"
            android:background="@drawable/button_background"
            android:fontFamily="sans-serif"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="150dp"
            android:minHeight="60dp"
            android:textSize="18dp"
            android:layout_marginStart="10dp"
            android:text="Bluetooth Off" />
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnBluetoothPaired"
        style="android:style/Widget.Button"
        android:background="@drawable/button_background"
        android:fontFamily="sans-serif"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="200dp"
        android:minHeight="60dp"
        android:textSize="18dp"
        android:layout_marginBottom="20dp"
        android:text="Check if HC is paired" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnConnect"
        style="android:style/Widget.Button"
        android:background="@drawable/button_background"
        android:fontFamily="sans-serif"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="200dp"
        android:minHeight="60dp"
        android:textSize="18dp"
        android:layout_marginBottom="40dp"
        android:text="Connect to HC module" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Functionalities:"
        android:textColor="@color/white"
        android:textSize="35dp"
        android:layout_marginBottom="20dp"
        android:textStyle="bold"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnFunctions"
        style="android:style/Widget.Button"
        android:background="@drawable/button_background"
        android:fontFamily="sans-serif"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="200dp"
        android:minHeight="60dp"
        android:textSize="18dp"
        android:layout_marginBottom="20dp"
        android:text="Functions" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnPV"
        style="android:style/Widget.Button"
        android:background="@drawable/button_background"
        android:fontFamily="sans-serif"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="200dp"
        android:minHeight="60dp"
        android:textSize="18dp"
        android:text="Solar panel" />

</LinearLayout>