<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/cardview_dark_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TemperatureActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp">

        <TextView
            android:id="@+id/TempText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Temperature"
            android:textColor="@color/white"
            android:textSize="50dp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imageThermometer"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/thermometer"
            app:tint="@color/white"
            android:layout_marginTop="15dp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/CurrTempText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current temperature:"
        android:textColor="@color/white"
        android:layout_marginBottom="10dp"
        android:textSize="30dp"/>

    <TextView
        android:id="@+id/CurrTempText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="30°C"
        android:textColor="@color/white"
        android:layout_marginBottom="20dp"
        android:textSize="100dp"/>

    <TextView
        android:id="@+id/ExpTempText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Expected temperature:"
        android:textColor="@color/white"
        android:layout_marginBottom="10dp"
        android:textSize="30dp"/>

    <TextView
        android:id="@+id/ExpTempText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="30°C"
        android:textColor="@color/white"
        android:layout_marginBottom="20dp"
        android:textSize="100dp"/>

    <EditText
        android:id="@+id/ET"
        android:layout_width="220dp"
        android:layout_height="60dp"
        android:hint="Type temperature ..."
        android:gravity="center"
        android:layout_marginBottom="20dp"
        android:inputType="number"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        android:background="@drawable/edit_text_background"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSet"
        style="android:style/Widget.Button"
        android:background="@drawable/button_background"
        android:fontFamily="sans-serif"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="220dp"
        android:minHeight="60dp"
        android:layout_marginBottom="20dp"
        android:textSize="18dp"
        android:text="Set temperature" />

</LinearLayout>